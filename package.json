{
	"name": "base5-ui",
	"version": "14.7.0",
	"description": "5app's reusable UI component library",
	"main": "index.js",
	"types": "dist/index.d.ts",
	"sideEffects": false,
	"scripts": {
		"build-icons": "pixo src-icons/svg --out-dir src/icons --template src-icons/template.js",
		"compile": "tsc",
		"copypackage": "cp -rf package.json README.md dist",
		"predist": "npm run copypackage",
		"dist": "cd dist && npm publish",
		"deploy-docs": "npm run build-storybook && gh-pages -d storybook-static -m 'Update docs [skip ci]'",
		"lint": "eslint ./",
		"format": "prettier --write .",
		"postversion": "pwd && cp -r package.json ../",
		"semantic-release": "semantic-release",
		"test": "jest /src && npm run lint",
		"test:cover": "jest /src --coverage && npm run lint",
		"prepare": "cd .. && husky install dist/.husky",
		"storybook": "start-storybook -p 6006",
		"build-storybook": "build-storybook"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/5app/base5-ui.git"
	},
	"author": "Dionysos Dajka",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/5app/base5-ui/issues"
	},
	"homepage": "https://github.com/5app/base5-ui#readme",
	"devDependencies": {
		"@babel/core": "^7.15.0",
		"@babel/preset-env": "^7.15.0",
		"@babel/preset-react": "^7.14.5",
		"@babel/preset-typescript": "^7.15.0",
		"@commitlint/cli": "^13.0.0",
		"@commitlint/config-conventional": "^13.0.0",
		"@semantic-release/changelog": "^5.0.0",
		"@semantic-release/git": "^9.0.0",
		"@storybook/addon-actions": "^6.4.9",
		"@storybook/addon-essentials": "^6.4.9",
		"@storybook/addon-links": "^6.4.9",
		"@storybook/react": "^6.4.9",
		"@testing-library/jest-dom": "^5.12.0",
		"@testing-library/react": "^12.0.0",
		"@testing-library/user-event": "^13.1.9",
		"@types/jest": "^27.0.0",
		"@types/styled-components": "^5.1.10",
		"@typescript-eslint/eslint-plugin": "4.28.0",
		"@typescript-eslint/parser": "4.28.0",
		"babel-jest": "^27.0.6",
		"eslint": "^7.27.0",
		"eslint-config-5app": "^0.15.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-import": "^2.20.1",
		"eslint-plugin-jsx-a11y": "^6.2.3",
		"eslint-plugin-react": "^7.19.0",
		"eslint-plugin-react-hooks": "^4.0.0",
		"eslint-plugin-storybook": "^0.5.5",
		"gh-pages": "^3.2.0",
		"husky": "^7.0.0",
		"jest": "^27.0.1",
		"pixo": "^1.1.2",
		"prettier": "^2.3.0",
		"prop-types": "^15.7.2",
		"react": "^17.0.0",
		"react-dom": "^17.0.0",
		"regenerator-runtime": "^0.13.7",
		"semantic-release": "^17.4.3",
		"styled-components": "^5.3.3",
		"typescript": "^4.3.4"
	},
	"peerDependencies": {
		"react": "^17.0.0",
		"react-dom": "^17.0.0",
		"styled-components": "^5.2.1"
	},
	"dependencies": {
		"@popperjs/core": "^2.10.1",
		"aria-hidden": "^1.1.1",
		"chartist": "^0.11.3",
		"classnames": "^2.3.1",
		"color2k": "^1.1.1",
		"focus-visible": "^5.0.2",
		"focusable-selectors": "^0.3.0",
		"popper-max-size-modifier": "^0.2.0",
		"react-focus-lock": "^2.3.1",
		"react-merge-refs": "^1.0.0",
		"react-popper": "^2.2.5",
		"use-item-list": "0.1.2"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		],
		"rules": {
			"subject-case": [
				2,
				"never",
				[
					"start-case",
					"pascal-case"
				]
			],
			"scope-case": [
				0
			]
		}
	},
	"release": {
		"branch": "master",
		"prepare": [
			"@semantic-release/changelog",
			{
				"path": "@semantic-release/npm",
				"pkgRoot": "dist"
			},
			{
				"path": "@semantic-release/git",
				"assets": [
					"package.json",
					"CHANGELOG.md"
				],
				"message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
			}
		],
		"plugins": [
			[
				"@semantic-release/commit-analyzer",
				{
					"releaseRules": [
						{
							"type": "refactor",
							"release": "patch"
						}
					]
				}
			],
			"@semantic-release/release-notes-generator",
			[
				"@semantic-release/npm",
				{
					"pkgRoot": "dist"
				}
			],
			"@semantic-release/github"
		]
	}
}
