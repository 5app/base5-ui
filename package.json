{
  "name": "base5-ui",
  "version": "13.1.5",
  "description": "5app's reusable UI component library",
  "main": "index.js",
  "scripts": {
    "build-icons": "pixo src-icons/svg --out-dir src/icons --template src-icons/template.js",
    "compile": "babel src --out-dir dist",
    "copypackage": "cp -rf package.json README.md dist",
    "predist": "npm run copypackage",
    "dist": "cd dist && npm publish",
    "deploy-docs": "npm run docz:build && gh-pages -d .docz/public -m 'Update docs [skip ci]'",
    "lint": "eslint ./",
    "format": "prettier --write .",
    "postversion": "pwd && cp -r package.json ../",
    "semantic-release": "semantic-release",
    "test": "jest /src && npm run lint",
    "test:cover": "jest /src --coverage && npm run lint",
    "prepare": "cd .. && husky install dist/.husky",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/5app/base5-ui.git"
  },
  "author": "Dionysos Dajka",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/5app/base5-ui/issues"
  },
  "homepage": "https://github.com/5app/base5-ui#readme",
  "devDependencies": {
    "@babel/cli": "^7.14.3",
    "@babel/core": "^7.14.3",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.14.2",
    "@babel/plugin-proposal-object-rest-spread": "^7.14.2",
    "@babel/plugin-proposal-optional-chaining": "^7.14.2",
    "@babel/plugin-transform-react-jsx": "^7.14.3",
    "@babel/preset-env": "^7.14.2",
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@semantic-release/changelog": "^5.0.0",
    "@semantic-release/git": "^9.0.0",
    "@storybook/addon-actions": "^6.2.9",
    "@storybook/addon-essentials": "^6.2.9",
    "@storybook/addon-links": "^6.2.9",
    "@storybook/react": "^6.2.9",
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/react": "^11.2.7",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.2.2",
    "babel-plugin-styled-components": "^1.10.7",
    "eslint": "^7.27.0",
    "eslint-config-5app": "^0.14.6",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "gh-pages": "^3.2.0",
    "husky": "^6.0.0",
    "jest": "^27.0.1",
    "pixo": "^1.1.2",
    "prettier": "^2.3.0",
    "prop-types": "^15.7.2",
    "react": "^17.0.0",
    "react-docgen-annotation-resolver": "^2.0.0",
    "react-dom": "^17.0.0",
    "semantic-release": "^17.4.3",
    "styled-components": "^5.2.1"
  },
  "peerDependencies": {
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "styled-components": "^5.2.1"
  },
  "dependencies": {
    "@popperjs/core": "^2.9.2",
    "5app-use-item-list": "0.1.1",
    "aria-hidden": "^1.1.1",
    "chartist": "^0.11.3",
    "classnames": "^2.2.6",
    "color2k": "^1.1.1",
    "focus-visible": "^5.0.2",
    "popper-max-size-modifier": "^0.2.0",
    "react-focus-lock": "^2.3.1",
    "react-merge-refs": "^1.0.0",
    "react-popper": "^2.2.5"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "subject-case": [
        2,
        "never",
        [
          "start-case",
          "pascal-case"
        ]
      ],
      "scope-case": [
        0
      ]
    }
  },
  "release": {
    "branch": "master",
    "prepare": [
      "@semantic-release/changelog",
      {
        "path": "@semantic-release/npm",
        "pkgRoot": "dist"
      },
      {
        "path": "@semantic-release/git",
        "assets": [
          "package.json",
          "CHANGELOG.md"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "releaseRules": [
            {
              "type": "refactor",
              "release": "patch"
            }
          ]
        }
      ],
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/npm",
        {
          "pkgRoot": "dist"
        }
      ],
      "@semantic-release/github"
    ]
  }
}
