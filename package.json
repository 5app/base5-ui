{
	"name": "base5-ui",
	"version": "11.15.2",
	"description": "5app's reusable UI component library",
	"main": "index.js",
	"scripts": {
		"build-icons": "pixo src-icons/svg --out-dir src/icons --template src-icons/template.js",
		"compile": "babel src --out-dir dist",
		"copypackage": "cp -rf package.json README.md dist",
		"predist": "npm run copypackage",
		"dist": "cd dist && npm publish",
		"docz:dev": "docz dev",
		"docz:build": "docz build",
		"deploy-docs": "npm run docz:build && gh-pages -d .docz/public -m 'Update docs [skip ci]'",
		"lint": "eslint ./",
		"format": "prettier --write \"src/**/*.js\"",
		"postversion": "pwd && cp -r package.json ../",
		"semantic-release": "semantic-release",
		"test": "jest /src && npm run lint",
		"test:cover": "jest /src --coverage && npm run lint"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/5app/base5-ui.git"
	},
	"author": "Dionysos Dajka",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/5app/base5-ui/issues"
	},
	"homepage": "https://github.com/5app/base5-ui#readme",
	"devDependencies": {
		"@babel/cli": "^7.8.4",
		"@babel/core": "^7.8.6",
		"@babel/plugin-proposal-class-properties": "^7.8.3",
		"@babel/plugin-proposal-nullish-coalescing-operator": "^7.8.3",
		"@babel/plugin-proposal-object-rest-spread": "^7.8.3",
		"@babel/plugin-proposal-optional-chaining": "^7.8.3",
		"@babel/plugin-transform-react-jsx": "^7.8.3",
		"@babel/preset-env": "^7.8.6",
		"@commitlint/cli": "^11.0.0",
		"@commitlint/config-conventional": "^11.0.0",
		"@mdx-js/mdx": "^1.6.16",
		"@semantic-release/changelog": "^5.0.0",
		"@semantic-release/git": "^9.0.0",
		"@testing-library/jest-dom": "^5.0.0",
		"@testing-library/react": "^11.0.0",
		"babel-eslint": "^10.1.0",
		"babel-plugin-styled-components": "^1.10.7",
		"docz": "^2.3.1",
		"eslint": "^7.0.0",
		"eslint-config-5app": "^0.12.0",
		"eslint-config-prettier": "^6.10.1",
		"eslint-plugin-import": "^2.20.1",
		"eslint-plugin-jsx-a11y": "^6.2.3",
		"eslint-plugin-prettier": "^3.1.2",
		"eslint-plugin-react": "^7.19.0",
		"eslint-plugin-react-hooks": "^4.0.0",
		"gh-pages": "^3.0.0",
		"husky": "^4.0.3",
		"jest": "^26.0.0",
		"pixo": "^1.1.2",
		"prettier": "^2.0.1",
		"prop-types": "^15.7.2",
		"react": "^16.11.0",
		"react-docgen-annotation-resolver": "^2.0.0",
		"react-dom": "^16.11.0",
		"semantic-release": "^17.0.0",
		"styled-components": "5.1.1"
	},
	"peerDependencies": {
		"react": "^16.11.0",
		"react-dom": "^16.11.0",
		"styled-components": "^5.0.0"
	},
	"dependencies": {
		"@popperjs/core": "2.4.4",
		"aria-hidden": "^1.1.1",
		"chartist": "^0.11.3",
		"chroma-js": "^2.0.4",
		"classnames": "^2.2.6",
		"focus-visible": "^5.0.2",
		"popper-max-size-modifier": "^0.2.0",
		"react-focus-lock": "^2.3.1",
		"react-hook-size": "^1.3.0",
		"react-merge-refs": "^1.0.0",
		"react-popper": "^2.2.3",
		"react-resize-aware": "^3.0.1",
		"use-item-list": "0.1.1"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		],
		"rules": {
			"subject-case": [
				2,
				"never",
				[
					"start-case",
					"pascal-case"
				]
			],
			"scope-case": [
				0
			]
		}
	},
	"husky": {
		"hooks": {
			"commit-msg": "commitlint -E  HUSKY_GIT_PARAMS"
		}
	},
	"release": {
		"branch": "master",
		"prepare": [
			"@semantic-release/changelog",
			{
				"path": "@semantic-release/npm",
				"pkgRoot": "dist"
			},
			{
				"path": "@semantic-release/git",
				"assets": [
					"package.json",
					"CHANGELOG.md"
				],
				"message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
			}
		],
		"plugins": [
			[
				"@semantic-release/commit-analyzer",
				{
					"releaseRules": [
						{
							"type": "refactor",
							"release": "patch"
						}
					]
				}
			],
			"@semantic-release/release-notes-generator",
			[
				"@semantic-release/npm",
				{
					"pkgRoot": "dist"
				}
			],
			"@semantic-release/github"
		]
	}
}
